/* 圆角盒子 */
.box {
  background-color: white;
  margin-top: -120rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  padding: 0 20rpx;
}
 
/* 头像部分 */
.head-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #fbdbdc;
  padding-bottom: 20rpx;
}
 
.avatar {
  margin-top: -80rpx;
  display: flex;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0);
}
 
.avatar::after {
  border: none;
}

.head-img {
  width: 200px;
  height: 100px;
  border-radius: 50%;
  background-color: #fbdbdc;
}
 
.tip {
  font-size: 50rpx;
  color: gray;
  margin: 15rpx 0;
}
